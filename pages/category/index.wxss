/* pages/category/index.wxss */
.page{
  height: 100%;
}
.container{
    display: flex;
    justify-content: space-between;
    position: fixed;
    top:100rpx;
    bottom:0;
}
.menu{
  width: 200rpx;
  height: 100%;
  background: #eee;
  overflow-y: auto;
}

.menu-item{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1px #ddd solid;
  font-size: 14px;
} 
/* 点击添加高亮 */
.active{
  background: #fff;
  color:red;
  position: relative;
}

.active::before{
  display: block;
  content: "";
  width:3px;
  height: 60rpx;
  background:red;
  position: absolute;
  left: 0;
  top: 20rpx;
} 
.content{
  flex: 1;
  padding: 20rpx;
  overflow-y: scroll;
}
.brand-title{
  text-align: center;
  margin: 20rpx 0;
}
.brand-title text{
  color:#ddd;
  margin: 0 10px;
}
.brands{
  display: flex;
  /* 换行 */
  flex-wrap: wrap;
}

.brand-item{
  width: 33.33%;
  padding: 20rpx 0;
  box-sizing: border-box;
  text-align: center;
}

.brand-item image{
  width:120rpx;
  max-height: 120rpx;
}

.brand-text{
  font-size: 12px;
  text-align: center;
} 