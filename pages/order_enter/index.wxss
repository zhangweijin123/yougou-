/* pages/cart/index.wxss */
.address-bar{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}
.address{
  padding: 20rpx 20rpx 0 20rpx;
}
.address-info{
  display: flex;
  justify-content: space-between;
}
image{
  height: 10rpx;
}
.address-info-right{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.arrow{
  width: 18rpx;
  height: 18rpx;
  border-top: 1px solid #999;
  border-right: 1px solid #999;
  transform: rotate(45deg);
}
.address-detail{
  padding-top: 10rpx;
}
.content{
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-top: 20rpx solid #eee;
}
.icon{
  margin-right: 10rpx;
}

.goods-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #ddd; 
}
.goods-item icon{
  margin:0 20rpx;
}
.goods-info{
  flex:1;
  display: flex;
  justify-content: space-between;
  align-items:center;
  margin-left:20rpx;
}
.goods-info image{
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
.info-right{
  height: 180rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.info-title text{
  font-size: 14px;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  /*控制在3行*/
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}
.info-bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.info-price{
  font-size: 16px;
  color: red;
}
.info-num{
  display: flex;
  align-items: center;
}
.info-num input{
  width:60px;
  text-align: center;
}

.info-num-btn{
  padding:5rpx 20rpx;
  border:1px #ddd solid;
}

.footer{
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  border-top:1px #eee solid;
}

.footer-left{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
  font-size: 14px;
}
.footer-left text{
  color: gray;
}
.footer-left .btm {
  color: #999;
  font-size: 14px;
}
.allprice text{
  color: red;
}
button{
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background: red;
}