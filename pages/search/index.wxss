/* pages/search/index.wxss */
.search{
  background: #eee;
  display: flex;
  padding: 20rpx;
}
.search-input{
  flex: 1;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 0 20rpx;
  border-radius: 4px;
}
.input{
  flex: 1;
  font-size: 14px;
  padding-left: 20rpx;
}

.cancel{
  border: 1px solid #ddd;
  width: 120rpx;
  font-size: 14px;
  line-height: 56rpx;
  border-radius: 4px;
  padding:0 15rpx;
  margin-left: 20rpx;
  text-align: center;
  box-sizing: border-box;
}

.search-title{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.history-content{
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.content-item{
  background: #eee;
  padding: 3rpx 10rpx;
  margin: 20rpx 10rpx;
}
